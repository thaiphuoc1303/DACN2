<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/dimen_24dp"
    android:layout_marginVertical="@dimen/dimen_8dp"
    android:background="@drawable/bg_white_border">

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_margin="@dimen/dimen_12dp"
        android:src="@drawable/ic_pushup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextInterSemiBold"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_12dp"
        tools:text="Push up"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toTopOf="@id/tv_repeat"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        app:layout_constraintStart_toEndOf="@id/img_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/TextInterMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_24dp"
        tools:text="24 thg 3"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        tools:text="10"
        android:textSize="@dimen/text_size_10sp"
        app:drawableStartCompat="@drawable/ic_repeat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:drawablePadding="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        tools:text="28s"
        android:textSize="@dimen/text_size_10sp"
        app:drawableStartCompat="@drawable/ic_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_repeat"
        app:layout_constraintStart_toEndOf="@id/tv_repeat"
        app:layout_constraintTop_toTopOf="@id/tv_repeat" />

    <TextView
        android:id="@+id/tv_calo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:drawablePadding="@dimen/dimen_8dp"
        android:gravity="center_vertical"
        tools:text="333"
        android:textSize="@dimen/text_size_10sp"
        app:drawableStartCompat="@drawable/ic_fire"
        app:layout_constraintBottom_toBottomOf="@id/tv_repeat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_repeat" />

</androidx.constraintlayout.widget.ConstraintLayout>
