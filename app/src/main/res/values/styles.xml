<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="ToolbarColorBlack" parent="Theme.AppCompat.Light">
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    
    <style name="TextToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
    </style>
    
    <!--    text style-->
    <style name="TextInterBold" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="TextInterMedium" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/inter_medium</item>
    </style>
    <style name="TextInterSemiBold" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>
    
    <style name="TextOnBoardingTitle" parent="TextInterBold">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextOnBoardingDescription" parent="TextInterMedium">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>
    
    <style name="TextTitleLargeStyle" parent="TextInterSemiBold">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextTitleMediumStyle" parent="TextInterSemiBold">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextTitleSemiSmallStyle" parent="TextInterSemiBold">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextMessageSmallStyle" parent="TextInterMedium">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/gray_7</item>
    </style>
    
    <style name="TextButtonDialog" parent="TextInterSemiBold">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    
    <style name="TextExerciseName" parent="TextInterSemiBold">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TextExerciseContent" parent="TextInterMedium">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>
    
    <style name="TextButtonExercise" parent="TextInterMedium">
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:textColor">@color/blue_300</item>
    </style>
    
    <style name="ButtonDialogCustom" parent="TextButtonDialog">
        <item name="android:background">@drawable/bg_button_dialog</item>
    </style>
</resources>
